{
    "tests": [
        {
            "name": "Login success",
            "arrange": [
                {
                    "name": "open_url",
                    "browser": "chrome",
                    "base_url": "https://dashboard-qa.ninjavan.co/v2/login"
                }
            ],
            "act": [
                {
                    "id": "username",
                    "locator": "[name='email']",
                    "type": "textbox",
                    "action": "type",
                    "pause": 3,
                    "value": "dashqaauto.mailbox@gmail.com"
                },
                {
                    "id": "password",
                    "locator": "[name='password']",
                    "type": "textbox",
                    "action": "type",
                    "value": "Ninjitsu89"
                }
            ],
            "assert": [
                {
                    "type": "screenshot",
                    "expected_screenshot": "~/screenshot.png"
                }
            ]
        }
    ]
}